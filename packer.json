{
  "builders":[{
    "type": "amazon-ebs",
    "source_ami_filter": {
      "filters": {
        "virtualization-type": "hvm",
        "name": "debian-10-amd64-*",
        "root-device-type": "ebs"
      },
      "owners": ["136693071363"],
      "most_recent": true
    },
    "instance_type": "t3.xlarge",
    "region": "us-west-2",
    "ssh_username": "admin",
    "ami_name": "firecracker-containerd-demo-debian-{{timestamp}}"
  }],
  "provisioners": [
    {
      "type": "file",
      "source": "./files.tar.gz",
      "destination": "/tmp/"
    },
    {
      "type": "shell",
      "inline": [
        "sudo tar xvzf /tmp/files.tar.gz -C /",
        "sudo rm /tmp/files.tar.gz",
        "sudo DEBIAN_FRONTEND=noninteractive apt-get update",
        "sudo DEBIAN_FRONTEND=noninteractive apt-get install -y pv bc",
        "sudo rm -rf /etc/ssh/ssh_host* /home/admin/.ssh/authorized_keys /var/lib/cloud/{data,instance,instances,sem}",
        "sudo chown root:root /home",
        "sudo chown --recursive admin:admin /home/admin",
        "ls -la /home/admin"
      ]
    }
  ]
}
